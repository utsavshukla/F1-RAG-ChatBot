{
  "name": "f1-rag-chatbot",
  "version": "1.0.0",
  "description": "An intelligent Formula 1 chatbot powered by RAG (Retrieval-Augmented Generation) technology",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup": "node setup.js",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "formula1",
    "f1",
    "rag",
    "chatbot",
    "ai",
    "nodejs",
    "react",
    "pinecone",
    "huggingface"
  ],
  "author": "F1 Enthusiast",
  "license": "MIT",
  "dependencies": {
    "@huggingface/inference": "^2.6.4",
    "@pinecone-database/pinecone": "^6.1.2",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
